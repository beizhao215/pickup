<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
	<%= f.label :arrival_date, "Arrival date (YYYY-MM-DD)" %>
    <%= f.text_field :arrival_date %>

	<%= f.label :arrival_time, "Arrival time (hh:mm:ss)" %>
    <%= f.text_field :arrival_time %>

	<%= f.label :flight_number %>
    <%= f.text_field :flight_number %>

	<%= f.label :number_of_people, "Number of people (max number 2 for one post)" %>
	<%= f.text_field :number_of_people %>
	
	<%= f.label :entry_port, "Port of entry" %>
	<%= f.text_field :entry_port %>
	
	Do you need Airport pickup?
	<%= f.radio_button :need_pickup, true %> <%= f.label :need_pickup, "Yes" %>
	<%= f.radio_button :need_pickup, false%> <%= f.label :need_pickup, "No" %>
	
	Do you need temp housing?
	<%= f.radio_button :need_housing, true %> <%= f.label :need_housing, "Yes" %>
  	<%= f.radio_button :need_housing, false%> <%= f.label :need_housing, "No" %>

	<%= f.label :luggage_number %>
    <%= f.text_field :luggage_number, placeholder: "How many luggage do you have?"  %>

    <%= f.label :note, "Notes" %>
	<%= f.text_area :note, placeholder: "Additional notes to volunteer..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>