<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>
<h4>(Personal info only visible to person share ride with you)</h3>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

 	  <%= f.label :major %>
      <%= f.text_field :major %>

	  <% if !@user.newbie? %>
	  	<%= f.radio_button :provide_housing, true %> <%= f.label :provide_housing, "I can provide temp housing" %>
	  	<%= f.radio_button :provide_housing, false%> <%= f.label :provide_housing, "I CANNOT provide temp housing" %>
	
	  	<%= f.label :housing_number, "If yes, you can provide temp housing for how many people?" %>
      	<%= f.text_field :housing_number %>
	  <% end %>

	  <%= f.radio_button :gender, true %> <%= f.label :gender, "I'm a boy" %>
	  <%= f.radio_button :gender, false%> <%= f.label :gender, "I'm a girl" %>

 	  <%= f.label :qq, "QQ" %>
      <%= f.text_field :qq %>

 	  <%= f.label :phone, "Phone#" %>
      <%= f.text_field :phone %>

 	  <%= f.label :renren, "Renren(xiaonei)" %>
      <%= f.text_field :renren %>
	
	  <% if !@user.newbie? %>
 	    <%= f.label :available_pickup_time, "Available pickup time(in case we are REALLY short of volunteers)" %>
        <%= f.text_field :available_pickup_time %>
	  <% end %>
      

      <%= f.submit "Update!", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>