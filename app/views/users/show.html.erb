<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="span4">
    <li>Email: <%= @user.email %></li>
	<li>QQ: <%= @user.qq %></li>
	<li>Phone#: <%= @user.phone %></li>
	<li>Renren: <%= @user.renren %></li>
  </div>
  
  <div class="span8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>

</div>